FROM node:23-alpine

WORKDIR /usr/src/app

ARG DATABASE_URL

RUN corepack enable && corepack prepare pnpm@9.15.1 --activate

# Copy all necessary files for workspace resolution
COPY ./pnpm-workspace.yaml ./pnpm-workspace.yaml
COPY ./pnpm-lock.yaml ./pnpm-lock.yaml
COPY ./package.json ./package.json
COPY ./turbo.json ./turbo.json

COPY ./packages ./packages

COPY ./apps/web ./apps/web

RUN pnpm install --frozen-lockfile

# If you have a separate db package, copy and generate it
# Replace 'db-package-name' with your actual db package name
RUN pnpm --filter="db-package-name" run db:generate || echo "No db:generate script found, skipping..."

# Alternative: if db:generate is in the root, run it directly
# RUN pnpm run db:generate || echo "No db:generate script found, skipping..."

# Build the web application
RUN DATABASE_URL=${DATABASE_URL} pnpm run build:web

EXPOSE 3001

CMD ["pnpm", "run", "start:web"]